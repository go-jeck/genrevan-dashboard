<div class="container">
  <h1>Create New LXC</h1>

  <form method="post" action="/lxc/new">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" name="name" id="name">
    </div>
    <div class="form-group">
      <label for="image">Image</label>
      <%= select_tag(:image, options_for_select(@image_list), class: "form-control") %>
    </div>
    <div class="form-group col-xs-2">
      <label for="containerPort">Container Port</label>
      <input type="text" class="form-control" name="containerPort" id="containerPort">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</div>
